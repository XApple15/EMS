{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "RabbitMq": {
    "HostName": "rabbitmq",
    "Port": 5672,
    "UserName": "admin",
    "Password": "admin123",
    "MaxRetryAttempts": 3,
    "RetryDelayMilliseconds": 1000
  },
  "LoadBalancer": {
    "Strategy": "ConsistentHashing",
    "CentralQueueName": "device-data-queue",
    "IngestQueuePattern": "ingest-queue-{0}",
    "ExchangeName": "device.data",
    "ExchangeType": "direct",
    "Replicas": [
      {
        "Id": "1",
        "Weight": 1,
        "LoadPercentage": 0,
        "IsHealthy": true
      },
      {
        "Id": "2",
        "Weight": 1,
        "LoadPercentage": 0,
        "IsHealthy": true
      },
      {
        "Id": "3",
        "Weight": 2,
        "LoadPercentage": 0,
        "IsHealthy": true
      }
    ]
  }
}
